# Help Desk Docker Compose Configuration
# Copy this file to docker-compose.yml and configure your .env file

version: '3.8'

services:
  help-desk:
    build:
      context: .
      dockerfile: Dockerfile
    ports:
      - "3000:3000"
    env_file:
      - .env
    environment:
      - NODE_ENV=production
    volumes:
      # Mount config directory for persistence
      - ./data:/app/data
    depends_on:
      - firebase-emulator
    networks:
      - help-desk-network

  # Firebase Emulator Suite (for local development)
  firebase-emulator:
    image: firebase/firebase-tools:latest
    ports:
      - "4000:4000"   # Emulator UI
      - "8080:8080"   # Firestore
      - "9099:9099"   # Auth
      - "9199:9199"   # Storage
      - "5001:5001"   # Functions
    volumes:
      - .:/workspace
      - ./firebase-data:/workspace/firebase-data
    working_dir: /workspace
    command: firebase emulators:start --only firestore,auth,storage,functions --project demo-project
    environment:
      - FIRESTORE_EMULATOR_HOST=0.0.0.0:8080
      - FIREBASE_AUTH_EMULATOR_HOST=0.0.0.0:9099
      - FIREBASE_STORAGE_EMULATOR_HOST=0.0.0.0:9199
      - FUNCTIONS_EMULATOR_HOST=0.0.0.0:5001
    networks:
      - help-desk-network
    profiles:
      - development

  # Reverse proxy (optional, for custom domains)
  nginx:
    image: nginx:alpine
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./nginx.conf:/etc/nginx/nginx.conf:ro
      - ./ssl:/etc/nginx/ssl:ro
    depends_on:
      - help-desk
    networks:
      - help-desk-network
    profiles:
      - production

networks:
  help-desk-network:
    driver: bridge

volumes:
  firebase-data: