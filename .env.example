# Help Desk Environment Configuration
# Copy this file to .env and fill in your values

# Firebase Configuration (Client SDK)
# Get these from Firebase Console > Project Settings > Your apps
VITE_FIREBASE_API_KEY=your-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef123456
VITE_FIREBASE_MEASUREMENT_ID=G-ABCDEF1234
VITE_FIREBASE_DATABASE_ID=your-firestore-database

# Application Configuration
VITE_APP_BASE_URL=https://your-domain.com
VITE_FIREBASE_FUNCTIONS_URL=https://us-central1-your-project.cloudfunctions.net
VITE_FIREBASE_API_URL=https://your-project.web.app

# Push Notifications (VAPID Public Key)
# Generate at: https://web-push-codelab.glitch.me/
VITE_VAPID_KEY=your-vapid-public-key

# AI Self-Help Features (Optional)
# Get from: https://aistudio.google.com/app/apikey
VITE_GEMINI_API_KEY=your-gemini-api-key
VITE_ENABLE_AI_SELF_HELP=true
VITE_ENABLE_TOKEN_CACHE=false

# Search Configuration (Optional)
# Get from: https://www.algolia.com/account/api-keys/
VITE_ALGOLIA_APP_ID=your-algolia-app-id
VITE_ALGOLIA_SEARCH_API_KEY=your-algolia-search-key

# Firebase Admin Token (for CLI deployment)
# Get with: firebase login:ci
FIREBASE_TOKEN=your-firebase-ci-token

# Note: Private keys (Mailgun, Algolia Admin, etc.) should be configured
# through Firebase Functions environment variables for security.
# Use the setup wizard or run the generated setup script to configure these.