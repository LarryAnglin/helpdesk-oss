{
  "name": "helpdesk-functions",
  "description": "Cloud Functions for Help Desk application",
  "scripts": {
    "lint": "eslint .",
    "build": "echo 'Functions build complete - no transpilation needed'",
    "serve": "firebase emulators:start --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "engines": {
    "node": "20"
  },
  "main": "index.js",
  "dependencies": {
    "@aws-sdk/client-ses": "^3.947.0",
    "@aws-sdk/client-sns": "^3.947.0",
    "@google/generative-ai": "^0.24.1",
    "@sendgrid/inbound-mail-parser": "^8.0.0",
    "@sendgrid/mail": "^8.1.6",
    "algoliasearch": "4.20.0",
    "axios": "^1.10.0",
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "csv-parse": "^5.6.0",
    "date-fns": "^2.30.0",
    "express": "^4.18.2",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^6.3.2",
    "googleapis": "^118.0.0",
    "json2csv": "^6.0.0-alpha.2",
    "mailparser": "^3.9.0",
    "nodemailer": "^6.10.1",
    "pdfkit": "^0.17.1",
    "stripe": "^18.3.0",
    "twilio": "^5.4.0"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "eslint-config-google": "^0.14.0",
    "firebase-functions-test": "^3.1.1",
    "supertest": "^7.1.1",
    "vitest": "^3.2.4"
  },
  "private": true
}
